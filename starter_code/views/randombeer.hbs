<div class="random-container">
    {{#each beer}}
    <img src={{this.image_url}} alt="">
    <div class="random-info">
        <h1>
            {{this.name}}
        </h1>
        <h2>
            {{this.tagline}}
        </h2>
        <p>
            {{this.description}}
        </p>
        <ul>
            {{#each this.food_pairing}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>
            {{this.brewers_tips}}
        </p>
    </div>
    {{/each}}
</div>